{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DBBS Faculty Match",
  "version": "0.1.0",
  "identifier": "org.dbbs.faculty-match",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build-sidecars && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DBBS Faculty Match",
        "width": 1280,
        "height": 1200,
        "minWidth": 1120,
        "minHeight": 820
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/*",
      "resources/**/*"
    ],
    "externalBin": [
      "binaries/embedding-helper"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
